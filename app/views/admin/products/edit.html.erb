<div class="col-md-4 col-md-offset-4" >
  <h2>编辑商品</h2>
  <hr>


  <%= simple_form_for [:admin, @product] do |f| %>
  <div class="form-product">
    <%= f.input :title, :label => "标题", input_html: {class: "form-control"} %>
    <%= f.input :description, :label => "描述", input_html: {class: "form-control"} %>
    <%= f.input :quantity, :label => "数量", input_html: {class: "form-control"} %>
    <%= f.input :price, :label => "价格", input_html: {class: "form-control"} %>
  </div>


  <% if @product.image.present? %>
     <span>目前商品图</span> <br>
     <%= image_tag(@product.image.thumb.url) %>
   <% end %>

   <div class="group">
     <%= f.input :image, as: :file %>
   </div>

   <%= f.submit "提交", class: "btn btn-primary", data: {disable_with: "Submiting..."} %>
   <% end %>

</div>
