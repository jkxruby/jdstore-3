<%= form_for @product do |f| %>

<div class="form-product">
    <div class="form-product string optional">
        <%= f.label "商品", :class => "string optional control-label" %>
        <%= f.text_field :title, :class => "string optional form-control" %>
    </div>

    <div class="form-product string optional">
        <%= f.label "描述", :class => "string optional control-label" %>
        <%= f.text_area :description, :class => "string optional form-control" %>
    </div>

    <div class="form-product string optional">
        <%= f.label "数量", :class => "string optional control-label" %>
        <%= f.text_field :quantity, :class => "string optional form-control" %>
    </div>

    <div class="form-product string optional">
        <%= f.label "价格", :class => "string optional control-label" %>
        <%= f.text_field :price, :class => "string optional form-control" %>
    </div>


</div>
<%= f.submit "提交", class: "btn btn-primary", data: { disable_with: "Submiting..." } %>
<% end %>
